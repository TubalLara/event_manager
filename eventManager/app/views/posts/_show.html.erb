<div class="row">
  <div class="col-md-3">
    <p>
      <strong>Title:</strong>
      <div>
        <%= @post.title%>
      </div>
      
    </p>

    <p>
      <strong>Content:</strong>
      <div style="overflow-y: scroll; margin-bottom: 12px;">
        <%= @post.content.html_safe %>
      </div>
      
    </p>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
</div>