<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Introduction</th>
      <th>From:</th>
      <th>To:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %> <br> </td>
        <td><%= event.introduction %> <br> </td>
        <td><%= event.begin_date %> <br> </td>
        <td><%= event.finish_date %> <br> </td>
        <td><%= link_to 'Show', event %> <br> </td>
        <td><%= link_to 'Edit', edit_event_path(event)%> <br> </td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

