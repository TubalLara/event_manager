  <div class="col-xs-4">
    <p>
      <strong>Name:</strong></br>
      <%= @character.name %>
    </p>
    <p>
      <strong>Introduction:</strong></br>
      <%= @character.introduction %>
    </p>
    <p>
      <strong>Creator:</strong></br>
      <%= @creator.name if @creator%>
    </p>
    <p>
      <strong>Player:</strong></br>
      <%= @user.name if @user%>
    </p>
    <p>
      <strong>Organization:</strong></br>
      <%= @organization.name if @organization%>
    </p>
    <p>
      <strong>Event:</strong></br>
      <%= @character.events.last.name if @character.events.last %>
    </p>
    <%= link_to 'Edit', edit_character_path(@character) %> |
    <%= link_to 'Back', characters_path %>
  </div>
  <div class="col-xs-8">    
    
    <%= render partial: "posts/index", :locals => {:character => @character}  %>
  
  </div>
  

